

<%- layout("/layouts/boierplate") %>  
<body>
  <body class="flex items-center justify-center h-screen bg-green-200"> 
    <img class="object-cover" src="/image/Indian_farmer_man_kneeling_and_holding_crop_plant_vector_image_on_VectorStock-removebg-preview.png" alt=""> 
    <div class="bg-white p-8 rounded-lg shadow-md w-96">  
        <h2 class="text-2xl font-bold mb-6 text-center">User Login</h2>  
        <form action="/users/login" method="POST">  
           <!-- Select Category -->
           <div>
            <label for="user-category" class="block text-lg font-semibold text-gray-700 mb-1">Select Category</label>
            <select id="user-category" name="user[c]" required
                class="block w-full p-3 border border-gray-300 rounded-lg focus:ring focus:ring-green-500 focus:border-green-500">
                <option value="" disabled selected>Select your category</option>
                <option value="Farmer">Farmer</option>
                <option value="Simple-User">Simple User</option>
            </select>
        </div>
            <div class="mb-4">  
                <label for="username" class="block text-sm font-medium text-gray-700">Username</label>  
                <input type="text" id="username" placeholder="username" name="username" required class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-green-500" />  
            </div>  
            <div class="mb-4">  
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>  
                <input type="password" id="password" placeholder="password" name="password" required class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-green-500" />  
            </div>  
         
            <button type="submit" class="w-full bg-green-500 text-white p-2 rounded-md hover:bg-green-600">Login</button>  
        </form>  
    </div>  
    <img class="object-cover" src="/image/Indian_Farmers_PNG_Picture__Cartoon_Indian_Farmer__Indian_Farmers__Cartoon__India_PNG_Image_For_Free_Download-removebg-preview.png" alt="">
</body>  
